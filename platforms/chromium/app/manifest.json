{
  "manifest_version": 3,
  "name": "My Simple AdBlock",
  "version": "1.0.0",

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "background": {
    "service_worker": "src/engine/Background.js"
  },

  "icons": {
    "192": "icons/mainIcon.png",
    "384": "icons/mainIcon@2x.png",
    "800": "icons/mainIcon@4x.png"
  },

  "description": "Blocks ads on the page",

  "action": {
    "default_icon": "icons/mainIcon@4x.png",
    "default_title": "My Simple AdBlock",
    "default_popup": "src/popup/Popup.html"
  }
}
